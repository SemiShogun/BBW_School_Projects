<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="217.0" prefWidth="463.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.hafenboote.view.Controller">
   <children>
      <Label minWidth="-Infinity" text="Liste der Boote im Hafen">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
         <font>
            <Font name="Comic Sans MS Bold" size="24.0" />
         </font></Label>
      <ListView fx:id="listView" prefHeight="200.0" prefWidth="200.0" />
      <ButtonBar maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
        <buttons>
          <Button mnemonicParsing="false" onAction="#handleNewSegelboot" text="add Segelboot" />
            <Button mnemonicParsing="false" onAction="#handleNewMotorboot" text="add Motorboot" />
            <Button mnemonicParsing="false" onAction="#deleteEntry" text="Delete" />
        </buttons>
         <VBox.margin>
            <Insets bottom="10.0" top="10.0" />
         </VBox.margin>
      </ButtonBar>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
