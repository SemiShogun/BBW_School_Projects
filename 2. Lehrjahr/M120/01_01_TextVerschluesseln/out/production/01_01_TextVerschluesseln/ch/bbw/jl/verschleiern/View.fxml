<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="5.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.bbw.jl.verschleiern.Controller">
   <children>
      <HBox spacing="5.0" VBox.vgrow="NEVER">
         <children>
            <VBox spacing="5.0">
               <children>
                  <Label prefHeight="25.0" text="Eingabe:" />
                  <Label prefHeight="25.0" text="Verschleiert:" />
               </children>
            </VBox>
            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
               <children>
                  <TextField fx:id="tfInput" maxWidth="1.7976931348623157E308" prefHeight="25.0" />
                  <TextField fx:id="tfOutput" maxWidth="1.7976931348623157E308" prefHeight="25.0" />
               </children>
            </VBox>
         </children>
         <opaqueInsets>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </opaqueInsets>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <HBox alignment="TOP_RIGHT">
         <children>
            <Button mnemonicParsing="false" onAction="#calculate" prefHeight="25.0" prefWidth="80.0" text="Calculate" />
            <Button mnemonicParsing="false" onAction="#clear" prefHeight="25.0" prefWidth="80.0" text="Clear" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
